{
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "rootDir": "."
    }
  },
  "include": ["src", "abis"],
  "exclude": ["dist", "abis/types"],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationDir": ".",
    "target": "es2018",
    "module": "esnext",
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
